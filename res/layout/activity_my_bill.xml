<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#EFEFED"
    >
    <include layout="@layout/layout_title"/>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
		<TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerVertical="true"
		    android:layout_marginLeft="20dp"
		    android:textColor="#aaaaaa"
		    android:textSize="14sp"
		    android:text="2016-2017雪季总消费"
		    />
		<TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerVertical="true"
		    android:layout_alignParentRight="true"
		    android:layout_marginRight="20dp"
		    android:textColor="#aaaaaa"
		    android:textSize="14sp"
		    android:text="￥36.000.00元"
		    />
        
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="86dp" 
        android:background="@color/white"
        >
        <TextView 
            android:id="@+id/my_bill_text_1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="20dp"
		    android:layout_marginLeft="20dp"
		    android:textSize="15sp"
		    android:text="【一对一】教练：胡一菲 预约5天"
		    />
        <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/my_bill_text_1"
		    android:layout_marginTop="12dp"
		    android:layout_marginLeft="20dp"
		    android:textColor="#e6883c"
		    android:textStyle="bold"
		    android:textSize="19sp"
		    android:text="￥1.400.00"
		    />
        <ImageView 
            android:id="@+id/my_bill_img_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/my_head"
            />
        <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/my_bill_img_1"
		    android:layout_marginTop="12dp"
		    android:layout_marginRight="20dp"
		    android:layout_alignParentRight="true"
		    android:textSize="12sp"
		    android:text="2016年1月8日"
		    />
    </RelativeLayout>
	<RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
		<TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerVertical="true"
		    android:layout_marginLeft="20dp"
		    android:textColor="#aaaaaa"
		    android:textSize="14sp"
		    android:text="2016-2017雪季总消费"
		    />
		<TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerVertical="true"
		    android:layout_alignParentRight="true"
		    android:layout_marginRight="20dp"
		    android:textColor="#aaaaaa"
		    android:textSize="14sp"
		    android:text="￥36.000.00元"
		    />
        
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="86dp" 
	        android:background="@color/white"
	        >
	        <TextView 
	            android:id="@+id/my_bill_text_2"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="20dp"
			    android:layout_marginLeft="20dp"
			    android:textSize="15sp"
			    android:text="【集训班】郝世花平日5日集训营（双板）"
			    />
	        <TextView 
	            android:id="@+id/my_bill_text_3"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_below="@id/my_bill_text_2"
			    android:layout_marginTop="12dp"
			    android:layout_marginLeft="20dp"
			    android:textColor="#e6883c"
			    android:textStyle="bold"
			    android:textSize="19sp"
			    android:text="￥1.400.00"
			    />
	        
	        <TextView 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginRight="20dp"
			    android:layout_marginBottom="15dp"
			    android:layout_alignParentRight="true"
			    android:layout_alignParentBottom="true"
			    android:textSize="12sp"
			    android:text="2016年1月8日"
			    />
	    </RelativeLayout>
	    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/backColor" />
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="86dp" 
	        android:background="@color/white"
	        >
	        <TextView 
	            android:id="@+id/my_bill_text_4"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="20dp"
			    android:layout_marginLeft="20dp"
			    android:textSize="15sp"
			    android:text="【进阶班】进阶滑雪动作提高班（双板）"
			    />
	        <TextView 
	            android:id="@+id/my_bill_text_5"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_below="@id/my_bill_text_4"
			    android:layout_marginTop="12dp"
			    android:layout_marginLeft="20dp"
			    android:textColor="#e6883c"
			    android:textStyle="bold"
			    android:textSize="19sp"
			    android:text="￥2.200.00"
			    />
	        
	        <TextView 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginRight="20dp"
			    android:layout_marginBottom="15dp"
			    android:layout_alignParentRight="true"
			    android:layout_alignParentBottom="true"
			    android:textSize="12sp"
			    android:text="2016年1月8日"
			    />
	    </RelativeLayout>
	    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/backColor" />
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="86dp" 
	        android:background="@color/white"
	        >
	        <TextView 
	            android:id="@+id/my_bill_text_6"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="20dp"
			    android:layout_marginLeft="20dp"
			    android:textSize="15sp"
			    android:text="郝世花滑雪”职业教练培训班（双板）"
			    />
	        <TextView 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_below="@id/my_bill_text_6"
			    android:layout_marginTop="12dp"
			    android:layout_marginLeft="20dp"
			    android:textColor="@color/gray_b4"
			    android:textStyle="bold"
			    android:textSize="19sp"
			    android:text="-￥2.200.00"
			    />
	        <TextView 
	            android:id="@+id/my_bill_img_2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_marginTop="20dp"
	            android:layout_marginRight="20dp"
	            android:textSize="12dp"
	            android:textColor="@color/red"
	            android:text="预约取消"
	            />
	        <TextView 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_below="@id/my_bill_img_2"
			    android:layout_marginTop="20dp"
			    android:layout_marginRight="20dp"
			    android:layout_alignParentRight="true"
			    android:textSize="12sp"
			    android:text="2016年1月8日"
			    />
	    </RelativeLayout>
	    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/backColor" />
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="86dp" 
	        android:background="@color/white"
	        >
	        <TextView 
	            android:id="@+id/my_bill_text_7"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="20dp"
			    android:layout_marginLeft="20dp"
			    android:textSize="15sp"
			    android:text="【郝世花培训】职业教练培训班（双板）"
			    />
	        <TextView 
	            android:id="@+id/my_bill_text_8"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_below="@id/my_bill_text_7"
			    android:layout_marginTop="12dp"
			    android:layout_marginLeft="20dp"
			    android:textColor="#e6883c"
			    android:textStyle="bold"
			    android:textSize="19sp"
			    android:text="￥3.600.00"
			    />
	        
	        <TextView 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginRight="20dp"
			    android:layout_marginBottom="15dp"
			    android:layout_alignParentRight="true"
			    android:layout_alignParentBottom="true"
			    android:textSize="12sp"
			    android:text="2016年1月8日"
			    />
	    </RelativeLayout>
    </LinearLayout>
</LinearLayout>
