<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_bg"
    android:orientation="vertical" >

    <include layout="@layout/layout_title_my" />
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    >
	    <ImageView 
	        android:id="@+id/my_img1"
	        android:layout_width="90dp"
	        android:layout_height="90dp"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="22dp"
	        android:background="@drawable/layer_corner_head"
	        />
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@id/my_img1"
	        android:layout_alignTop="@id/my_img1"
	        android:layout_marginRight="25dp"
	        android:layout_marginTop="40dp"
	        android:textColor="@color/white"
	        android:textSize="15sp"
	        android:text="LV.6"
	        />
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/my_img1"
	        android:layout_alignTop="@id/my_img1"
	        android:layout_marginLeft="25dp"
	        android:layout_marginTop="40dp"
	        android:textColor="@color/white"
	        android:textSize="15sp"
	        android:text="1628 积分"
	        />
	    <ImageView 
	        android:id="@+id/my_img2"
	        android:layout_width="60dp"
	        android:layout_height="28dp"
	        android:layout_alignParentTop="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginTop="22dp"
	        android:src="@color/blue"
	        />
	    <TextView 
	        android:id="@+id/my_text1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/my_img1"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="14dp"
	        android:textColor="@color/white"
	        android:textSize="15sp"
	        android:text="迈克尔·杰克逊"
	        />
	    <LinearLayout 
	        android:id="@+id/my_linear_1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/my_text1"
	        android:layout_marginTop="14dp"
            android:gravity="center"
	        >
		    <ImageView 
		        android:id="@+id/my_img4"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_vertical"
		        android:src="@drawable/my_write_round"
		        />
		    <ImageView 
		        android:id="@+id/my_img5"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5dp"
		        android:layout_gravity="center"
		        android:src="@drawable/my_gray_round"
		        />
	    </LinearLayout>
	    <TextView 
	        android:id="@+id/my_text2"
	        android:layout_width="280sp"
	        android:layout_height="40sp"
	        android:layout_below="@id/my_linear_1"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="20dp"
	        android:background="@drawable/shape_button_corner"
	        android:gravity="center_vertical|center_horizontal"
	        android:textColor="@color/black"
	        android:textSize="17sp"
	        android:text="编辑个人资料"
	        />
	</RelativeLayout>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="30sp"
	    >
	    <ImageView 
	        android:id="@+id/my_img_6"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:src="@drawable/my_icon_clock"
	        />
	    <TextView 
	        android:id="@+id/my_text_3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/my_img_6"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="12sp"
	        android:textColor="@color/my_text_gray"
	        android:text="预约"
	        android:textSize="14dp"
	        />
	    <ImageView 
	        android:id="@+id/my_img_7"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toLeftOf="@id/my_img_6"
        	android:layout_marginRight="34sp"
	        android:src="@drawable/my_icon_study"
	        />
	    <TextView 
	        android:id="@+id/my_text_4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/my_img_7"
	        android:layout_marginTop="12sp"
	        android:layout_alignLeft="@id/my_img_7"
	        android:layout_centerVertical="true"
	        android:textColor="@color/my_text_gray"
	        android:text="学习"
	        android:textSize="14dp"
	        />
	    <ImageView 
	        android:id="@+id/my_img_8"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/my_img_6"
			android:layout_marginLeft="34sp"
	        android:src="@drawable/my_icon_video"
	        />
	    <ImageView 
	        android:id="@+id/my_img_9"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/my_text_3"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="12sp"
	        android:src="@drawable/my_icon_msg"
	        />
	</RelativeLayout>

</LinearLayout>