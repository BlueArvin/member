<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f3"
   >
    
 <RelativeLayout android:id="@+id/rl_nothing_background"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:visibility="gone">
     <LinearLayout android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_centerInParent="true">
         <ImageView android:id="@+id/iv_nothing"
             android:layout_width="100dp"
             android:layout_height="wrap_content"
             android:scaleType="centerInside"
             android:src="@drawable/noting_background"/>
         <TextView android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:textSize="14sp"
             android:textColor="#cacaca"
             android:text="还没有最新动态哦"/>
     </LinearLayout>
 </RelativeLayout>
 <LinearLayout android:id="@+id/ll_content_advice_attention"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical">
     <RelativeLayout android:layout_width="match_parent"
         android:layout_height="55dp"
         android:background="@color/white">
         <TextView android:id="@+id/tv_myAttention"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="14sp"
             android:textColor="#9a9a9a"
             android:text="我的关注"
             android:layout_centerVertical="true"
             android:layout_marginLeft="10dp"/>
         
         <ImageView android:id="@+id/iv_attention_more"
             android:layout_width="15dp"
             android:layout_height="15dp"
             android:src="@drawable/btn_more_normal"
             android:layout_alignParentRight="true"
             android:layout_marginRight="10dp"
             android:layout_centerVertical="true"/>
         <TextView android:id="@+id/tv_attention_num"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toLeftOf="@id/iv_attention_more"
             android:layout_marginRight="5dp"
             android:layout_centerVertical="true"
             android:textSize="14sp"
             android:textColor="#9a9a9a"
             android:text="2"/>
         <LinearLayout android:id="@+id/ll_myAttention_profile"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:orientation="horizontal"
             android:layout_toRightOf="@id/tv_myAttention"
             android:layout_toLeftOf="@id/tv_attention_num"
             android:layout_marginLeft="10dp"></LinearLayout>
     </RelativeLayout>
     <com.frame.member.widget.refreshlistview.PullToRefreshListView
         android:id="@+id/lv_advice_attention"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:scrollbars="none"
         android:divider="@drawable/list_divider_transparent"/>
 </LinearLayout>
 

</RelativeLayout>
